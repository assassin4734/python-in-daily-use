import pyautogui
import time


time.sleep(7)
box = (430 , 17, 430, 50)
for i in range(3):
    pyautogui.keyDown('right')
    pyautogui.keyUp('right')
    time.sleep(0.05)
    im = pyautogui.screenshot(region=(0, 0, 2560 ,1600))
    rect_on_big = im.crop(box)
    rect_on_big.save("/Users/julia/Desktop/screenshots/"+str(i) + ".png")
    time.sleep(0.05)